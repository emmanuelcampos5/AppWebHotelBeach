@model AppWebHotelBeach.Models.Cliente

@{
    ViewData["Title"] = "CrearCuenta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="Titulos" >CrearCuenta</h1>
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4 Aliniamiento">

            @if (TempData["MensajeCreado"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                    <strong>@TempData["MensajeCreado"]</strong>
                </div>
            }

            @if (TempData["MensajeError"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                    <strong>@TempData["MensajeError"]</strong>
                </div>
            }

            <form id="FormularioCrearCuenta" asp-action="CrearCuenta" method="post" class="FormularioLogin Fondos Textos">
                <div class="form-group">
                    <label asp-for="Cedula" class="form-label fas fa-address-card">   Cedula</label>
                    <input type="text" asp-for="Cedula" class="form-control" placeholder="Cedula 9 digitos" />
                    <span asp-validation-for="Cedula" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Telefono" class="form-label fas fa-mobile">Telefono</label>
                    <input type="text" asp-for="Telefono" class="form-control" placeholder="Numero Telefonico" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="DireccionCliente" class="form-label fas fa-map-marker">  Direccion del cliente</label>
                    <input type="text" asp-for="DireccionCliente" class="form-control" placeholder="Ej: Avenida 7, calle Matute" />
                    <span asp-validation-for="DireccionCliente" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Email" class="form-label fas fa-envelope">  Email</label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="usuario@dominio.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="form-group mt-4">
                    <input type="submit" value="Enviar" class="btn Botones fas fas fa-paper-plane" />
                </div>
            </form>

        </div>
        <div class="col-md-4"></div>
    </div>
</div>
